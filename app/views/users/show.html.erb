<% provide(:title, @user.name) %>

<div class="row user">
    <h1>
        <%= @user.name %>
    </h1>
    <table>
        <tr>
            <th>challenge name</th>
            <th>point</th>
            <th>solved at</th>
        </tr>
        <% @submits.each do |submit| %>
        <tr>
            <td><%= Challenge.find(submit.chal_id).name %></td>
            <td><%= Challenge.find(submit.chal_id).point %></td>
            <td><%= submit.created_at %></td>
        </tr>
        <% end %>
    </table> 
</div>